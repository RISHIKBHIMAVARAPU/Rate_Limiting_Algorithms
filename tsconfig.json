{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES6",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "noEmitOnError": true,
  },
  "include": [
    "**/*.ts"
  ]
}
